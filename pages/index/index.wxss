page,.contain{
  width:100%;
  height:100%;

}
.contain{
  display: flex;
  flex-direction: column;
}
.nav{
  width:100%;
}
.nav ul{
  display: flex;
  justify-content:space-around;
  background: gray;
  box-sizing: border-box;
}
.nav ul li{
  text-align: center;
  line-height: 45px;
  flex:1;
}
.nav ul li.active{
  border-bottom:4px solid blue;
}
swiper{
  flex:1;
}
.myswiper-item{
  padding:0 5px;
}
.myScroll-view{
    height:100%;
}
.box{
  height:180px;
  width:100%;
  margin:10px 0;
  display: flex;
}
.box .img{
    width:40%;
    height:100%;
    padding:5px;
}
.box .img image{
  width:100%;
  height:100%;
}
.information {
    flex:1;
    width:55%;
    height:100%;
    padding:5px;
    box-sizing: border-box;
    margin:0 5px;
    overflow:hidden;
 
}
.information .title{
  font-size:16px;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  line-height: 30px;
  border-bottom:1px solid #999;
}
.editor,.update,.introduce,.readnow{
  display: block;
   font-size:13px;
    color:#999;
    line-height: 18px;
}
.editor{
  display: inline-block;
  line-height: 25px;
}
.readnow{
  float:right;
  color:#fff;
  background:red;
  padding:1px 5px;
  border-radius: 5px;
  margin:5px 5px 0 0;
}
.update{
    margin:5px ;
}
.introduce{
  overflow: hidden;
}